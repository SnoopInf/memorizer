<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dataart.memorizer.TaskActivity$PlaceholderFragment"
    android:orientation="vertical">


    <TextView
        android:id="@+id/task_instructions"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Word"
        android:singleLine="false"
        android:gravity="start"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:textAppearanceLarge"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:orientation="horizontal">

       <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:tools="http://schemas.android.com/tools"
           xmlns:card_view="http://schemas.android.com/apk/res-auto"
           android:id="@+id/vocabulary_word_card"
           android:layout_gravity="center"
           android:layout_width="200dp"
           android:layout_height="match_parent"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginLeft="10dp"
           card_view:cardCornerRadius="5dp"
           >

           <TextView
               android:id="@+id/vocabulary_word_text"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Word"
               android:singleLine="false"
               android:gravity="center"
               android:fontFamily="sans-serif-condensed"
               android:textAppearance="?android:textAppearanceLarge"/>

       </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/task_button_option1"
                android:text="Definition 1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/task_button_option2"
                android:text="Definition 2"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/task_button_option3"
                android:text="Definition 3"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/task_button_option4"
                android:text="Definition 4"/>
            </LinearLayout>

       </LinearLayout>


      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/task_button_submit"
            android:background="@drawable/button_task"
            android:layout_gravity="center"
            android:text="Submit"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/task_button_continue"
            android:background="@drawable/button_task"
            android:layout_gravity="center"
            android:text="Continue"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"/>
    </FrameLayout>
</LinearLayout>
