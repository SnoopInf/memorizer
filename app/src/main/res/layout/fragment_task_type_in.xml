<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dataart.memorizer.TaskActivity$PlaceholderFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/task_instructions"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Word"
        android:singleLine="false"
        android:gravity="start"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:textAppearanceLarge"/>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/task_word_card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        card_view:cardCornerRadius="5dp"
        >

        <TextView
            android:id="@+id/task_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Word"
            android:singleLine="false"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"
            android:elevation="5dp" />

    </android.support.v7.widget.CardView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">
    <EditText
        android:id="@+id/task_type_in"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/translation"
        android:singleLine="true" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/task_button_submit"
            android:background="@drawable/button_task"
            android:layout_gravity="center"
            android:text="Submit"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"
            android:elevation="1dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="50dp"
            android:id="@+id/task_button_continue"
            android:background="@drawable/button_task"
            android:layout_gravity="center"
            android:text="Continue"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"
            android:elevation="5dp" />
    </FrameLayout>
</LinearLayout>
